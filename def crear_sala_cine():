def crear_sala_cine():
filas = 3 
columnas = 3 
sala =[[f"{i * columnas + j + 1}" for j in range (columnas)] for in range(filas)]

print("La sala de cine ha sido creada exitosamente!")
for fila in sala:
    print("".join(fila))

    def menu_principal():
